@model List<GetAllDietContentQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="content">
    <div class="container-fluid p-0">

        <div class="row">
            <div class="col-12 col-lg-12 col-xxl-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-header">

                        <h5 class="card-title mb-0">İçerik Listesi</h5>
                    </div>
                    <hr class="my-0" />
                    <a href="/DietContent/Create" class="btn btn-success">İçerik Oluştur</a>
                    <table class="table table-hover my-0">
                        <thead>
                            <tr>
                                <th>Fotoğraf</th>
                                <th>Başlık</th> 
                                <th>Oluşturma tarihi</th>
                                <th>Güncelle</th>
                                <th>Durumu</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="/Image/DietContentImage/@item.ImageUrl" height="50" width="50" alt="@item.Subject" /></td>
                                    <td>@item.Subject</td>
                                    <td>@Convert.ToDateTime(item.CreatedDate).ToShortDateString()</td>
                                    <td><a href="/DietContent/Update/@item.Id" class="btn btn-warning">Güncelle</a></td>
                                    @if (item.Status == true)
                                    {
                                        <td><a href="/DietContent/ChangeDietContentStatusToFalse/@item.Id" class="btn btn-info">Yayından Kaldır</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="/DietContent/ChangeDietContentStatusToTrue/@item.Id" class="btn btn-success">Yayınla</a></td>
                                    }
                                    <td><a href="/DietContent/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr class="my-0" />
                </div>
            </div>
        </div>

    </div>
</main>



